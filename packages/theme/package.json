{
  "name": "@kui-framework/theme",
  "version": "0.0.1",
  "description": "Sistema de temas KUI Framework - Design tokens, Tailwind preset e estilos globais",
  "keywords": ["kui", "theme", "tailwind", "design-tokens", "css", "styling"],
  "homepage": "https://github.com/kennyjsa/kui#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/kennyjsa/kui.git",
    "directory": "packages/theme"
  },
  "bugs": {
    "url": "https://github.com/kennyjsa/kui/issues"
  },
  "license": "MIT",
  "author": "Kenny JSA",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./tailwind": "./tailwind.config.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tailwindcss": "^3.4.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "tailwindcss": "^3.0.0"
  }
}

